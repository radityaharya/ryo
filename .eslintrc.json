{
  "extends": [
    "prettier",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "prettier",
    "@typescript-eslint"
  ],
  "rules": {
    "prettier/prettier": ["error"]
  },
  "env": {
    "serviceworker": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest",
    "project": "./tsconfig.json"
  },
  "ignorePatterns": [
    "node_modules",
    "**/*.js", // Ignore all .js files
    "**/*.d.ts" // Ignore all .d.ts files
  ]
}